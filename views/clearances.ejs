<%- include ('partials/top') %>
  <div class="row space">
    <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
      <h3 class="title">Clearances</h3>
    </div>
  </div>

  <div class="row space">
    
    <div class="col-12">
      <form id="search-form" method="GET" action="/clearances" class="form-inline">
        <div class="form-group mb-4">
          <input required type="text" name="search" id="search-box" class="form-control" placeholder="Search ...">
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
      </form>
      <h4 class="font-weight-light text-center text-white bg-primary p-2 m-0 table-top">Clearances</h4>
      <table class="table table-bordered table-striped">
        <thead class="font-weight-bold">
          <tr>
            <th>Student Matric Number</th>
            <th>Student Name</th>
            <th>Department</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% clearances.forEach((m) => { %>
            <tr>
              <td><small><%= m.student.matric_no %></small></td>
              <td><small><%= m.student.surname + " " + m.student.first_name + " " + m.student.middle_name %></small></td>
              <td><small><%= m.student.department %></small></td>
              <td>
                <a target="_blank" href='<%= "/clearances/view?clearance_id=" + m._id %>' class="btn btn-sm btn-info mr-2 mb-2">View</a>
                <a href='<%= "/clearances/remove/" + m._id %>' class="btn btn-sm btn-danger mb-2">Remove</a>
              </td>
            </tr>
          <% }) %>          
        </tbody>
      </table>
    </div>
  </div>
</main>
</div>
</div> 

<%- include ('partials/bottom') %>